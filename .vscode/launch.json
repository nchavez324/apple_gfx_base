{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug",
      "program": "${command:cmake.launchTargetPath}",
      "args": [],
      "env": {
        // Add the directory where our target was built to the PATHs it gets
        // resolved by CMake Tools:
        "PATH": "${env:PATH}:${command:cmake.getLaunchTargetDirectory}"
      },
      "stopOnEntry": false,
      "cwd": "${workspaceFolder}",
      "console": "externalTerminal"
    }
  ]
}
