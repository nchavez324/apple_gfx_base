{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 21,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "macos",
      "displayName": "macOS",
      "generator": "Xcode",
      "binaryDir": "${sourceDir}/build/macos",
      "cacheVariables": {
        "CMAKE_SYSTEM_NAME": "Darwin",
        "CMAKE_OSX_ARCHITECTURES": "arm64",
        "CMAKE_OSX_DEPLOYMENT_TARGET": "10.13"
      }
    },
    {
      "name": "ios",
      "generator": "Xcode",
      "cacheVariables": {
        "CMAKE_SYSTEM_NAME": "iOS",
        "CMAKE_OSX_DEPLOYMENT_TARGET": "11"
      }
    },
    {
      "name": "ios_simulator",
      "displayName": "iOS Simulator",
      "inherits": "ios",
      "binaryDir": "${sourceDir}/build/ios_simulator",
      "cacheVariables": {
        "CMAKE_OSX_ARCHITECTURES": "x86_64"
      }
    },
    {
      "name": "ios_device",
      "displayName": "iOS Device",
      "inherits": "ios",
      "binaryDir": "${sourceDir}/build/ios_device",
      "cacheVariables": {
        "CMAKE_OSX_ARCHITECTURES": "arm64"
      }
    },
    {
      "name": "tvos",
      "generator": "Xcode",
      "cacheVariables": {
        "CMAKE_SYSTEM_NAME": "tvOS",
        "CMAKE_OSX_DEPLOYMENT_TARGET": "11"
      }
    },
    {
      "name": "tvos_simulator",
      "displayName": "tvOS Simulator",
      "inherits": "tvos",
      "binaryDir": "${sourceDir}/build/tvos_simulator",
      "cacheVariables": {
        "CMAKE_OSX_ARCHITECTURES": "x86_64"
      }
    },
    {
      "name": "tvos_device",
      "displayName": "tvOS Device",
      "inherits": "tvos",
      "binaryDir": "${sourceDir}/build/tvos_device",
      "cacheVariables": {
        "CMAKE_OSX_ARCHITECTURES": "arm64"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "macos",
      "displayName": "macOS",
      "configurePreset": "macos",
      "targets": [
        "examples_macos_app"
      ]
    },
    {
      "name": "ios_simulator",
      "displayName": "iOS Simulator",
      "configurePreset": "ios_simulator",
      "targets": [
        "examples_ios_app"
      ]
    },
    {
      "name": "ios_device",
      "displayName": "iOS Device",
      "configurePreset": "ios_device",
      "targets": [
        "examples_ios_app"
      ]
    },
    {
      "name": "tvos_simulator",
      "displayName": "tvOS Simulator",
      "configurePreset": "tvos_simulator",
      "targets": [
        "examples_tvos_app"
      ]
    },
    {
      "name": "tvos_device",
      "displayName": "tvOS Device",
      "configurePreset": "tvos_device",
      "targets": [
        "examples_tvos_app"
      ]
    }
  ]
}